<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Edit Your Listings</h3>
            <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" id="title" value="<%= listing.title %>"class="form-control" required >
                    <div class="valid-feedback"> Title looks good!</div>
                    <div class="invalid-feedback"> Title should be valid</div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" id="description" rows="3" cols="40" class="form-control" required><%= listing.description%></textarea>
                    <div class="valid-feedback"> Description looks good!</div>
                    <div class="invalid-feedback"> Please enter a short description</div>
                </div>
            
                 <div class="mb-3">
                    Original Listing Image
                    <br><img src="<%= originalImageUrl%>" alt="" style="height: 150px; width: 200px;">
                 </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input type="file" name="listing[image][url]" id="image" class="form-control">
                    <div class="valid-feedback"> Image looks good!</div>
                    <div class="invalid-feedback"> Image should be valid</div>
                </div>
                
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" id="price" value="<%= listing.price %>" class="form-control" required >
                    <div class="valid-feedback"> Price looks good!</div>
                    <div class="invalid-feedback"> Price should be valid</div>
                </div>
            
                <div class="row">
                    <div class="mb-3 col-md-7">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" id="location" value="<%= listing.location %>" class="form-control" required >
                        <div class="valid-feedback"> Location looks good!</div>
                        <div class="invalid-feedback"> Location should be valid</div>
                    </div>

                    <div class="mb-3 col-md-5">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" id="country" value="<%= listing.country %>" class="form-control" required >
                        <div class="valid-feedback"> Country looks good!</div>
                        <div class="invalid-feedback"> Country name should be valid</div>
                    </div>
                </div>
                
                <button class="btn btn-dark edit-btn">Edit</button>
                <br><br>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>