<% layout("/layouts/boilerplate") -%>

<div class="container mt-5">
    <h3>Book <%= listing.title %></h3>
    <form action="/bookings/<%= listing._id %>" method="POST">
        <div class="mb-3">
            <label for="name">Name</label>
            <input type="text" name="booking[name]" id="name" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="uniqueId">UniqueId</label>
            <input type="text" name="booking[name]" id="uniqueId" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="people">Number of People</label>
            <input type="number" name="booking[numberOfPeople]" id="people" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="startDate">Start Date</label>
            <input type="date" name="booking[startDate]" id="startDate" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="noOfDays">Number of Days</label>
            <input type="number" name="booking[numberOfDays]" id="noOfDays" class="form-control" required>
        </div>
        <button class="btn btn-success">Confirm Booking</button>
    </form>
</div>
